#include <iostream>
using namespace std;

int main() {
    int n;
    int tinggi[100];

    cout << "Masukkan jumlah siswa: ";
    cin >> n;

    cout << "Masukkan tinggi badan siswa (dalam cm):" << endl;
    for (int i = 0; i < n; i++) {
        cin >> tinggi[i];
    }

    // Proses Insertion Sort
    for (int i = 1; i < n; i++) {
        int temp = tinggi[i];
        int j = i - 1;
        while (j >= 0 && tinggi[j] > temp) {
            tinggi[j + 1] = tinggi[j];
            j--;
        }
        tinggi[j + 1] = temp;
    }

    cout << "\nTinggi badan siswa setelah diurutkan (dari terpendek ke tertinggi): ";
    for (int i = 0; i < n; i++) {
        cout << tinggi[i] << " ";
    }
    cout << "cm" << endl;

    return 0;
}
